<% content_for :title, @category.name %>

<div class="max-w-5xl mx-auto">
  <!-- Hero Section with Gradient -->
  <div class="h-48 bg-gradient-to-br from-purple-500 via-pink-500 to-red-500 relative rounded-t-2xl overflow-hidden">
    <div class="absolute inset-0 bg-black opacity-20"></div>
    <div class="absolute bottom-0 left-0 right-0 p-8">
      <h1 class="text-4xl font-bold text-white drop-shadow-lg"><%= @category.name %></h1>
    </div>
  </div>

  <!-- Category Info Card -->
  <div class="bg-white rounded-b-2xl shadow-sm border border-gray-100 border-t-0 p-8 mb-6">
    <!-- Description Section -->
    <div class="mb-8">
      <div class="flex items-center gap-2 mb-4">
        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"/>
        </svg>
        <h2 class="text-lg font-semibold text-gray-900"><%= t('.description_title') %></h2>
      </div>
      <% if @category.description.present? %>
        <p class="text-gray-600 leading-relaxed"><%= @category.description %></p>
      <% else %>
        <p class="text-gray-400 italic"><%= t('.no_description') %></p>
      <% end %>
    </div>

  </div>

  <!-- Action Buttons -->
  <div class="flex flex-wrap gap-3 justify-end">
    <%= link_to categories_path, class: "inline-flex items-center gap-2 px-6 py-3 border border-gray-300 rounded-lg text-gray-700 font-medium hover:bg-gray-50 transition" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      <%= t('.back') %>
    <% end %>

    <% if user_signed_in? && current_user.admin? %>
      <%= link_to edit_category_path(@category), class: "inline-flex items-center gap-2 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium shadow-sm hover:shadow-md transition-all duration-200" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        <%= t('.edit') %>
      <% end %>

      <%= button_to @category, method: :delete, data: { turbo_confirm: t('categories.common.delete_confirm') }, class: "inline-flex items-center gap-2 px-6 py-3 bg-red-600 hover:bg-red-700 text-white rounded-lg font-medium shadow-sm hover:shadow-md transition-all duration-200 cursor-pointer" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
        <%= t('.delete') %>
      <% end %>
    <% end %>
  </div>
</div>
