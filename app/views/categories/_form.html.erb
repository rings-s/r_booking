<%= form_with(model: category, class: "space-y-8") do |form| %>
  <!-- Error Messages -->
  <% if category.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-500 rounded-lg p-4">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="ml-3 flex-1">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% category.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Category Information Section -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-6"><%= t('.section_title') %></h3>

    <div class="space-y-6">
      <!-- Category Name -->
      <div>
        <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" do %>
          <%= t('.name_label') %> <span class="text-red-500">*</span>
        <% end %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
            </svg>
          </div>
          <%= form.text_field :name, placeholder: t('.name_placeholder'), class: "block w-full pl-10 pr-3 py-3 border #{category.errors[:name].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : 'border-gray-300 focus:ring-purple-500 focus:border-purple-500'} rounded-lg shadow-sm transition" %>
        </div>
        <% if category.errors[:name].any? %>
          <p class="mt-2 text-sm text-red-600"><%= category.errors[:name].first %></p>
        <% end %>
      </div>

      <!-- Category Description -->
      <div>
        <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" do %>
          <%= t('.description_label') %>
        <% end %>
        <div class="relative">
          <div class="absolute top-3 left-3 pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"/>
            </svg>
          </div>
          <%= form.text_area :description, rows: 4, placeholder: t('.description_placeholder'), class: "block w-full pl-10 pr-3 py-3 border #{category.errors[:description].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : 'border-gray-300 focus:ring-purple-500 focus:border-purple-500'} rounded-lg shadow-sm transition resize-none" %>
        </div>
        <% if category.errors[:description].any? %>
          <p class="mt-2 text-sm text-red-600"><%= category.errors[:description].first %></p>
        <% end %>
        <p class="mt-2 text-sm text-gray-500"><%= t('.description_help') %></p>
      </div>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex items-center justify-end gap-3 pt-6 border-t border-gray-200">
    <%= link_to t('common.cancel'), categories_path, class: "px-6 py-3 border border-gray-300 rounded-lg text-gray-700 font-medium hover:bg-gray-50 transition" %>
    <%= form.submit class: "inline-flex items-center gap-2 px-6 py-3 bg-purple-600 hover:bg-purple-700 text-white rounded-lg font-medium shadow-sm hover:shadow-md transition-all duration-200 transform hover:-translate-y-0.5 cursor-pointer" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
      </svg>
      <%= t(form.object.new_record? ? '.create' : '.update') %>
    <% end %>
  </div>
<% end %>
