<% content_for :title, t('.title') %>

<!-- Header Section -->
<div class="mb-12">
  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
    <div class="flex-1">
      <h1 class="text-4xl font-bold text-gray-900 mb-2"><%= t('.title') %></h1>
      <p class="text-gray-600"><%= t('.subtitle') %></p>
    </div>
    <% if user_signed_in? && current_user.admin? %>
      <div class="flex items-center gap-3">
        <%= link_to new_category_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium shadow-sm hover:shadow-md transition-all duration-200 transform hover:-translate-y-0.5" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          <%= t('.new') %>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Search Bar -->
  <div class="mt-8">
    <div class="relative">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
      </div>
      <input type="text" placeholder="<%= t('.search_placeholder') %>" class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition">
    </div>
  </div>
</div>

<!-- Categories Grid -->
<div id="categories">
  <% if @categories.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @categories.each do |category| %>
        <div id="<%= dom_id category %>" class="group bg-white rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden border border-gray-100">
          <%= link_to category, class: "block" do %>
            <!-- Category Header with Gradient -->
            <div class="h-32 bg-gradient-to-br from-purple-500 via-pink-500 to-red-500 relative overflow-hidden">
              <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
              <div class="absolute bottom-0 left-0 right-0 p-4">
                <h3 class="text-xl font-bold text-white truncate drop-shadow-lg"><%= category.name %></h3>
              </div>
            </div>

            <!-- Card Body -->
            <div class="p-6">
              <% if category.description.present? %>
                <p class="text-gray-600 text-sm line-clamp-3 mb-4"><%= category.description %></p>
              <% else %>
                <p class="text-gray-400 text-sm italic mb-4"><%= t('categories.common.no_description') %></p>
              <% end %>

              <!-- View Details Button -->
              <div class="pt-4 border-t border-gray-100">
                <span class="inline-flex items-center gap-2 text-purple-600 font-medium text-sm group-hover:text-purple-700 transition">
                  <%= t('.view_details') %>
                  <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </span>
              </div>
            </div>
          <% end %>

          <!-- Card Actions (Only for admins) -->
          <% if user_signed_in? && current_user.admin? %>
            <div class="px-6 pb-6 flex gap-2">
              <%= link_to edit_category_path(category), class: "flex-1 inline-flex items-center justify-center gap-2 px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg text-sm font-medium transition" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
                <%= t('common.edit') %>
              <% end %>
              <%= button_to category, method: :delete, data: { turbo_confirm: t('categories.common.delete_confirm') }, class: "flex-1 inline-flex items-center justify-center gap-2 px-4 py-2 bg-red-50 hover:bg-red-100 text-red-600 rounded-lg text-sm font-medium transition cursor-pointer" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
                <%= t('common.delete') %>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-16 bg-white rounded-xl shadow-sm border border-gray-100">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-gray-100 rounded-full mb-4">
        <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
        </svg>
      </div>
      <h3 class="text-xl font-medium text-gray-900 mb-2"><%= t('.no_results.title') %></h3>
      <p class="text-gray-500 mb-6"><%= t('.no_results.description') %></p>
      <% if user_signed_in? && current_user.admin? %>
        <%= link_to t('.no_results.create'), new_category_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-purple-600 hover:bg-purple-700 text-white rounded-lg font-medium transition" %>
      <% end %>
    </div>
  <% end %>
</div>
