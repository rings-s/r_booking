<% content_for :title, t('auth.sign_in.title') %>

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-2"><%= t('auth.sign_in.header') %></h1>
      <p class="text-gray-600"><%= t('auth.sign_in.subtitle') %></p>
    </div>

    <!-- Main Card -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
      <!-- Google OAuth Button - Primary -->
      <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: 'w-full flex items-center justify-center gap-3 py-3.5 px-4 border-2 border-gray-300 rounded-xl shadow-sm bg-white text-base font-medium text-gray-700 hover:bg-gray-50 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200' do %>
        <svg class="w-5 h-5" viewBox="0 0 24 24">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        <%= t('auth.sign_in.google_button') %>
      <% end %>

      <!-- Divider -->
      <div class="relative my-8">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-200"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-4 bg-white text-gray-500 font-medium"><%= t('auth.sign_in.divider') %></span>
        </div>
      </div>

      <!-- Email/Password Form -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-5', data: { turbo: false } }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Email Field -->
        <div>
          <%= f.label :email, t('auth.sign_in.email_label'), class: 'block text-sm font-medium text-gray-700 mb-2' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('auth.sign_in.email_placeholder'), class: 'block w-full px-4 py-3 border border-gray-300 rounded-xl placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200' %>
        </div>

        <!-- Password Field -->
        <div>
          <div class="flex items-center justify-between mb-2">
            <%= f.label :password, t('auth.sign_in.password_label'), class: 'block text-sm font-medium text-gray-700' %>
            <%= link_to t('auth.sign_in.forgot_password'), new_password_path(resource_name), class: 'text-sm font-medium text-blue-600 hover:text-blue-500 transition' %>
          </div>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: t('auth.sign_in.password_placeholder'), class: 'block w-full px-4 py-3 border border-gray-300 rounded-xl placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200' %>
        </div>

        <!-- Remember Me Checkbox -->
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded cursor-pointer' %>
            <%= f.label :remember_me, t('auth.sign_in.remember_me'), class: 'ml-2 block text-sm text-gray-700 cursor-pointer' %>
          </div>
        <% end %>

        <!-- Sign In Button -->
        <%= f.submit t('auth.sign_in.submit'), class: 'w-full py-3.5 px-4 border border-transparent rounded-xl shadow-sm text-base font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 transform hover:-translate-y-0.5 cursor-pointer' %>
      <% end %>
    </div>

    <!-- Sign Up Link -->
    <div class="mt-6 text-center">
      <span class="text-gray-600"><%= t('auth.sign_in.no_account') %></span>
      <%= link_to t('auth.sign_in.sign_up_link'), new_registration_path(resource_name), class: 'font-semibold text-blue-600 hover:text-blue-500 transition' %>
    </div>

    <!-- Footer Links -->
    <div class="mt-8 text-center text-xs text-gray-500">
      <%= link_to t('auth.sign_in.privacy_policy'), "#", class: 'hover:text-gray-700 transition' %> â€¢
      <%= link_to t('auth.sign_in.terms_of_service'), "#", class: 'hover:text-gray-700 transition' %>
    </div>
  </div>
</div>
