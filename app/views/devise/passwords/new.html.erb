<% content_for :title, t('auth.reset_password.title') %>

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-2"><%= t('auth.reset_password.header') %></h1>
      <p class="text-gray-600"><%= t('auth.reset_password.subtitle') %></p>
    </div>

    <!-- Main Card -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'space-y-6', data: { turbo: false } }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Email Field -->
        <div>
          <%= f.label :email, t('auth.reset_password.email_label'), class: 'block text-sm font-medium text-gray-700 mb-2' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('auth.reset_password.email_placeholder'), class: 'block w-full px-4 py-3 border border-gray-300 rounded-xl placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200' %>
        </div>

        <!-- Submit Button -->
        <%= f.submit t('auth.reset_password.submit'), class: 'w-full py-3.5 px-4 border border-transparent rounded-xl shadow-sm text-base font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 transform hover:-translate-y-0.5 cursor-pointer' %>
      <% end %>
    </div>

    <!-- Back to Sign In Link -->
    <div class="mt-6 text-center">
      <span class="text-gray-600"><%= t('auth.reset_password.remember_password') %></span>
      <%= link_to t('auth.reset_password.sign_in_link'), new_session_path(resource_name), class: 'font-semibold text-blue-600 hover:text-blue-500 transition' %>
    </div>

    <!-- Footer Links -->
    <div class="mt-8 text-center text-xs text-gray-500">
      <%= link_to t('auth.reset_password.privacy_policy'), "#", class: 'hover:text-gray-700 transition' %> â€¢
      <%= link_to t('auth.reset_password.terms_of_service'), "#", class: 'hover:text-gray-700 transition' %>
    </div>
  </div>
</div>
