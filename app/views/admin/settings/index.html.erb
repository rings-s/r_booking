      <div>
        <h3 class="text-lg font-bold text-gray-900">Email Settings</h3>
        <p class="text-sm text-gray-600">Email notifications and SMTP config</p>
      </div>
    </div>
    <div class="border-t border-gray-200 pt-4">
      <p class="text-gray-500 text-sm">Email configuration options will be available here</p>
    </div>
  </div>

  <!-- Payment Gateway Card -->
  <div class="bg-white rounded-lg shadow p-6 border border-gray-200">
    <div class="flex items-center gap-4 mb-4">
      <div class="p-3 bg-gray-100 rounded-lg">
        <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
