<%= form_with(model: [@business, @service], local: true, class: 'space-y-8') do |form| %>
  <!-- Error Messages -->
  <% if @service.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-500 rounded-xl p-4 animate-fade-in">
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
        </svg>
        <div class="flex-1">
          <h3 class="text-sm font-medium text-red-800 mb-1">
            <%= pluralize(@service.errors.count, "error") %> prevented this service from being saved:
          </h3>
          <ul class="text-sm text-red-700 space-y-1">
            <% @service.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Basic Information Section -->
  <div class="bg-white rounded-2xl border border-gray-200 overflow-hidden shadow-sm">
    <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
      <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        Basic Information
      </h3>
    </div>

    <div class="p-6 space-y-6">
      <!-- Service Name -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">
          Service Name <span class="text-red-500">*</span>
        </label>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
            </svg>
          </div>
          <%= form.text_field :name,
              placeholder: 'e.g., Haircut, Massage, Consultation',
              class: "block w-full pl-11 pr-4 py-3 border #{@service.errors[:name].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : 'border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500'} rounded-xl shadow-sm transition",
              autofocus: true %>
        </div>
        <% if @service.errors[:name].any? %>
          <p class="mt-2 text-sm text-red-600"><%= @service.errors[:name].first %></p>
        <% else %>
          <p class="mt-2 text-sm text-gray-500">Choose a clear, descriptive name for your service</p>
        <% end %>
      </div>

      <!-- Description -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">
          Description
        </label>
        <%= form.text_area :description,
            rows: 4,
            placeholder: 'Describe what this service includes, what to expect, and any requirements...',
            class: "block w-full px-4 py-3 border #{@service.errors[:description].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : 'border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500'} rounded-xl shadow-sm transition resize-none" %>
        <p class="mt-2 text-sm text-gray-500">Help customers understand what they're booking</p>
      </div>
    </div>
  </div>

  <!-- Pricing & Duration Section -->
  <div class="bg-white rounded-2xl border border-gray-200 overflow-hidden shadow-sm">
    <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
      <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        Pricing & Duration
      </h3>
    </div>

    <div class="p-6">
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <!-- Duration -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Duration (minutes) <span class="text-red-500">*</span>
          </label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <%= form.number_field :duration,
                min: 1,
                step: 5,
                placeholder: '30',
                class: "block w-full pl-11 pr-4 py-3 border #{@service.errors[:duration].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : 'border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500'} rounded-xl shadow-sm transition" %>
          </div>
          <% if @service.errors[:duration].any? %>
            <p class="mt-2 text-sm text-red-600"><%= @service.errors[:duration].first %></p>
          <% else %>
            <p class="mt-2 text-sm text-gray-500">How long does this service take?</p>
          <% end %>
        </div>

        <!-- Price -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Price ($) <span class="text-red-500">*</span>
          </label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <span class="text-gray-500 text-lg font-medium">$</span>
            </div>
            <%= form.number_field :price,
                step: 0.01,
                min: 0,
                placeholder: '50.00',
                class: "block w-full pl-11 pr-4 py-3 border #{@service.errors[:price].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : 'border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500'} rounded-xl shadow-sm transition" %>
          </div>
          <% if @service.errors[:price].any? %>
            <p class="mt-2 text-sm text-red-600"><%= @service.errors[:price].first %></p>
          <% else %>
            <p class="mt-2 text-sm text-gray-500">What do you charge for this service?</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Service Images Section -->
  <div class="bg-white rounded-2xl border border-gray-200 overflow-hidden shadow-sm">
    <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
      <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        Service Images
        <span class="text-sm text-gray-500 font-normal">(Optional)</span>
      </h3>
    </div>

    <div class="p-6">
      <!-- Current Images Preview -->
      <% if @service.images.attached? %>
        <div class="mb-6">
          <p class="text-sm font-medium text-gray-700 mb-3">Current Images</p>
          <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
            <% @service.images.each do |image| %>
              <div class="relative group aspect-square rounded-xl overflow-hidden border-2 border-gray-200 hover:border-blue-300 transition-colors">
                <%= image_tag image.variant(resize_to_fill: [300, 300]), class: "w-full h-full object-cover" %>
                <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-40 transition-all duration-200 flex items-center justify-center">
                  <svg class="w-6 h-6 text-white opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- File Upload -->
      <div class="relative">
        <input
          type="file"
          id="service_images"
          name="service[images][]"
          multiple
          accept="image/*"
          class="hidden"
          onchange="displayFileNames(this)"
        />
        <label
          for="service_images"
          class="flex flex-col items-center justify-center w-full py-12 px-6 border-2 border-dashed border-gray-300 rounded-xl hover:border-blue-400 hover:bg-blue-50/50 transition-all duration-200 cursor-pointer group"
        >
          <svg class="w-12 h-12 text-gray-400 group-hover:text-blue-500 transition-colors mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
          </svg>
          <div class="text-center">
            <p class="text-sm font-medium text-gray-700 group-hover:text-blue-600 transition-colors">
              Click to upload images
            </p>
            <p class="text-xs text-gray-500 mt-1">or drag and drop</p>
          </div>
          <p class="text-xs text-gray-400 mt-3">PNG, JPG, GIF up to 10MB each</p>
        </label>
        <div id="file-names" class="mt-3 text-sm text-gray-600"></div>
      </div>

      <p class="mt-4 text-sm text-gray-500 flex items-start gap-2">
        <svg class="w-4 h-4 text-blue-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
        </svg>
        <span>Upload high-quality images that showcase your service. Multiple images help customers understand what to expect.</span>
      </p>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex flex-col-reverse sm:flex-row gap-3 items-stretch sm:items-center justify-end pt-6 border-t-2 border-gray-100">
    <%= link_to 'Cancel', business_services_path(@business),
        class: "inline-flex items-center justify-center gap-2 px-6 py-3 border-2 border-gray-300 rounded-xl text-gray-700 font-medium hover:bg-gray-50 hover:border-gray-400 transition-all duration-200" %>

    <%= form.submit @service.new_record? ? 'Create Service' : 'Update Service',
        class: "inline-flex items-center justify-center gap-2 px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-xl font-semibold shadow-lg shadow-blue-500/30 hover:shadow-xl hover:shadow-blue-500/40 transition-all duration-200 transform hover:-translate-y-0.5 cursor-pointer",
        data: { disable_with: "Saving..." } %>
  </div>
<% end %>

<script>
function displayFileNames(input) {
  const fileNamesDiv = document.getElementById('file-names');
  if (input.files.length > 0) {
    const fileNames = Array.from(input.files).map(file => file.name).join(', ');
    fileNamesDiv.textContent = `Selected: ${fileNames}`;
    fileNamesDiv.classList.add('text-blue-600', 'font-medium');
  } else {
    fileNamesDiv.textContent = '';
  }
}
</script>
