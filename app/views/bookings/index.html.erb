<% content_for :title, t('.title') %>

<div class="min-h-screen bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Header -->
    <div class="text-center mb-12 max-w-2xl mx-auto">
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4 tracking-tight">
        <%= t('.title') %>
      </h1>
      <p class="text-lg text-gray-600">
        <%= t('.subtitle') %>
      </p>
    </div>

    <!-- Stats Overview -->
    <% if @bookings.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-12">
        <!-- Total Bookings -->
        <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-2xl p-6 border border-blue-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-blue-600 mb-1"><%= t('.stats.total') %></p>
              <p class="text-3xl font-bold text-blue-900"><%= @bookings.count %></p>
            </div>
            <div class="w-12 h-12 bg-blue-600 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
          </div>
        </div>

        <!-- Upcoming -->
        <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-2xl p-6 border border-green-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-green-600 mb-1"><%= t('.stats.upcoming') %></p>
              <p class="text-3xl font-bold text-green-900"><%= @upcoming_bookings.count %></p>
            </div>
            <div class="w-12 h-12 bg-green-600 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
          </div>
        </div>

        <!-- Past -->
        <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-2xl p-6 border border-gray-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600 mb-1"><%= t('.stats.past') %></p>
              <p class="text-3xl font-bold text-gray-900"><%= @past_bookings.count %></p>
            </div>
            <div class="w-12 h-12 bg-gray-600 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Bookings Sections -->
    <div class="space-y-12">
      <!-- Upcoming Bookings -->
      <% if @upcoming_bookings.any? %>
        <section>
          <div class="flex items-center gap-3 mb-6">
            <div class="flex-1">
              <h2 class="text-2xl font-bold text-gray-900"><%= t('.sections.upcoming.title') %></h2>
              <p class="text-sm text-gray-600 mt-1"><%= t('.sections.upcoming.count', count: @upcoming_bookings.count) %></p>
            </div>
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <% @upcoming_bookings.each do |booking| %>
              <%= render 'booking_card', booking: booking, variant: 'upcoming' %>
            <% end %>
          </div>
        </section>
      <% end %>

      <!-- Past Bookings -->
      <% if @past_bookings.any? %>
        <section>
          <div class="flex items-center gap-3 mb-6 pt-8 border-t border-gray-200">
            <div class="flex-1">
              <h2 class="text-2xl font-bold text-gray-900"><%= t('.sections.past.title') %></h2>
              <p class="text-sm text-gray-600 mt-1"><%= t('.sections.past.count', count: @past_bookings.count) %></p>
            </div>
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <% @past_bookings.each do |booking| %>
              <%= render 'booking_card', booking: booking, variant: 'past' %>
            <% end %>
          </div>
        </section>
      <% end %>

      <!-- Empty State -->
      <% if @bookings.empty? %>
        <div class="text-center py-20">
          <div class="inline-flex items-center justify-center w-24 h-24 bg-gradient-to-br from-blue-50 to-blue-100 rounded-3xl mb-6">
            <svg class="w-12 h-12 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-3"><%= t('.empty.title') %></h3>
          <p class="text-lg text-gray-600 mb-8 max-w-md mx-auto">
            <%= t('.empty.description') %>
          </p>
          <%= link_to businesses_path, class: "inline-flex items-center gap-3 px-8 py-4 bg-blue-600 hover:bg-blue-700 text-white rounded-xl font-semibold shadow-lg shadow-blue-500/30 hover:shadow-xl hover:shadow-blue-500/40 transition-all duration-200 transform hover:-translate-y-0.5" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
            <%= t('.empty.browse_services') %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
