<%
  # Determine card styling based on variant
  if variant == 'upcoming'
    border_color = 'border-green-200'
    bg_gradient = 'from-green-50 to-white'
    badge_color = booking.status == 'confirmed' ? 'bg-green-100 text-green-800 border-green-200' : 'bg-yellow-100 text-yellow-800 border-yellow-200'
    badge_text = booking.status.capitalize
  else
    border_color = 'border-gray-200'
    bg_gradient = 'from-gray-50 to-white'
    badge_color = booking.status == 'completed' ? 'bg-blue-100 text-blue-800 border-blue-200' : 'bg-red-100 text-red-800 border-red-200'
    badge_text = booking.status.capitalize
  end
%>

<div class="group bg-gradient-to-br <%= bg_gradient %> rounded-2xl border-2 <%= border_color %> p-6 hover:shadow-xl hover:scale-[1.02] transition-all duration-200">
  <!-- Header -->
  <div class="flex items-start justify-between mb-4">
    <div class="flex items-center gap-3">
      <!-- Date Badge -->
      <div class="flex-shrink-0">
        <div class="w-16 h-16 bg-white rounded-xl shadow-sm border border-gray-200 flex flex-col items-center justify-center">
          <span class="text-xs font-medium text-gray-500 uppercase"><%= booking.start_time.strftime('%b') %></span>
          <span class="text-2xl font-bold text-gray-900"><%= booking.start_time.strftime('%d') %></span>
        </div>
      </div>

      <!-- Service Info -->
      <div class="flex-1 min-w-0">
        <h3 class="text-lg font-bold text-gray-900 mb-1 group-hover:text-blue-600 transition-colors">
          <%= booking.service.name %>
        </h3>
        <p class="text-sm text-gray-600 flex items-center gap-2">
          <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
          </svg>
          <%= booking.service.business.name %>
        </p>
      </div>
    </div>

    <!-- Status Badge -->
    <span class="flex-shrink-0 inline-flex items-center px-3 py-1.5 rounded-lg text-xs font-bold border <%= badge_color %>">
      <%= badge_text %>
    </span>
  </div>

  <!-- Details -->
  <div class="space-y-3 mb-5">
    <!-- Time -->
    <div class="flex items-center gap-3 text-sm">
      <div class="w-8 h-8 bg-white rounded-lg shadow-sm border border-gray-200 flex items-center justify-center flex-shrink-0">
        <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <div class="flex-1">
        <p class="font-semibold text-gray-900"><%= booking.start_time.strftime('%I:%M %p') %> - <%= booking.end_time.strftime('%I:%M %p') %></p>
        <p class="text-gray-500"><%= booking.service.formatted_duration %></p>
      </div>
    </div>

    <!-- Price -->
    <div class="flex items-center gap-3 text-sm">
      <div class="w-8 h-8 bg-white rounded-lg shadow-sm border border-gray-200 flex items-center justify-center flex-shrink-0">
        <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <div class="flex-1">
        <p class="font-semibold text-gray-900"><%= booking.service.formatted_price %></p>
        <p class="text-gray-500"><%= t('.service_fee') %></p>
      </div>
    </div>

    <!-- Notes (if present) -->
    <% if booking.notes.present? %>
      <div class="flex items-start gap-3 text-sm">
        <div class="w-8 h-8 bg-white rounded-lg shadow-sm border border-gray-200 flex items-center justify-center flex-shrink-0">
          <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
          </svg>
        </div>
        <div class="flex-1">
          <p class="text-gray-700 italic line-clamp-2">"<%= booking.notes %>"</p>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Actions -->
  <div class="flex gap-2 pt-4 border-t border-gray-200">
    <%= link_to booking_path(booking), class: "flex-1 inline-flex items-center justify-center gap-2 px-4 py-3 bg-white hover:bg-gray-50 border-2 border-gray-300 hover:border-gray-400 text-gray-700 rounded-xl font-semibold transition-all duration-200" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
      </svg>
      <%= t('common.view') %>
    <% end %>

    <% if variant == 'upcoming' %>
      <%= link_to edit_booking_path(booking), class: "flex-1 inline-flex items-center justify-center gap-2 px-4 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-xl font-semibold shadow-md hover:shadow-lg transition-all duration-200" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        <%= t('common.edit') %>
      <% end %>

      <%= button_to booking_path(booking), method: :delete,
          data: { turbo_confirm: t('bookings.common.cancel_confirm') },
          class: "flex-1 inline-flex items-center justify-center gap-2 px-4 py-3 bg-red-100 hover:bg-red-200 border-2 border-red-200 hover:border-red-300 text-red-700 rounded-xl font-semibold cursor-pointer transition-all duration-200" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
        <%= t('common.cancel') %>
      <% end %>
    <% end %>
  </div>
</div>
