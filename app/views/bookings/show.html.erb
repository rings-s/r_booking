<% content_for :title, t('.title') %>

<!-- Back Button -->
<div class="mb-6">
  <%= link_to bookings_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 transition" do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    <%= t('.back_to_bookings') %>
  <% end %>
</div>

<!-- Main Content -->
<div class="max-w-4xl mx-auto">
  <!-- Success Message -->
  <% if notice.present? %>
    <div class="mb-6 bg-green-50 border border-green-200 rounded-lg p-4">
      <div class="flex items-center gap-3">
        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <p class="text-green-800 font-medium"><%= notice %></p>
      </div>
    </div>
  <% end %>

  <!-- Booking Confirmation Card -->
  <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
    <!-- Header -->
    <div class="bg-gradient-to-r from-blue-600 to-indigo-600 px-8 py-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-white mb-2"><%= t('.title') %></h1>
          <p class="text-blue-100"><%= t('.confirmed_message') %></p>
        </div>
        <div class="px-4 py-2 bg-white/20 backdrop-blur-sm rounded-lg">
          <span class="text-white font-semibold text-sm uppercase tracking-wide"><%= @booking.status %></span>
        </div>
      </div>
    </div>

    <!-- Content -->
    <div class="p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Left Column: Booking Details -->
        <div class="space-y-6">
          <!-- Service Information -->
          <div>
            <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
              </svg>
              <%= t('.service_details.title') %>
            </h2>
            <div class="bg-gray-50 rounded-xl p-6 space-y-4">
              <div>
                <p class="text-sm text-gray-600 mb-1"><%= t('.service_details.service') %></p>
                <p class="text-lg font-semibold text-gray-900"><%= @booking.service.name %></p>
              </div>
              <div>
                <p class="text-sm text-gray-600 mb-1"><%= t('.service_details.business') %></p>
                <p class="text-lg font-semibold text-gray-900"><%= @booking.service.business.name %></p>
              </div>
              <div>
                <p class="text-sm text-gray-600 mb-1"><%= t('.service_details.category') %></p>
                <span class="inline-block px-3 py-1 bg-blue-100 text-blue-700 text-sm font-semibold rounded-full">
                  <%= @booking.service.category.name %>
                </span>
              </div>
            </div>
          </div>

          <!-- Appointment Time -->
          <div>
            <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              Appointment Time
            </h2>
            <div class="bg-gray-50 rounded-xl p-6 space-y-4">
              <div>
                <p class="text-sm text-gray-600 mb-1"><%= t('.appointment.datetime') %></p>
                <p class="text-lg font-semibold text-gray-900"><%= @booking.formatted_time_range %></p>
              </div>
              <div>
                <p class="text-sm text-gray-600 mb-1"><%= t('.appointment.duration') %></p>
                <p class="text-lg font-semibold text-gray-900"><%= @booking.service.formatted_duration %></p>
              </div>
              <div>
                <p class="text-sm text-gray-600 mb-1"><%= t('.appointment.price') %></p>
                <p class="text-lg font-semibold text-gray-900"><%= @booking.service.formatted_price %></p>
              </div>
            </div>
          </div>

          <!-- Notes -->
          <% if @booking.notes.present? %>
            <div>
              <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
                </svg>
                <%= t('.notes.title') %>
              </h2>
              <div class="bg-gray-50 rounded-xl p-6">
                <p class="text-gray-700"><%= @booking.notes %></p>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Right Column: QR Code -->
        <div class="space-y-6">
          <div>
            <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z"/>
              </svg>
              <%= t('.qr.title') %>
            </h2>

            <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl p-8 border-2 border-dashed border-gray-300">
              <div class="text-center">
                <% if @booking.qr_code.present? %>
                  <div class="bg-white p-6 rounded-lg shadow-lg inline-block mb-4">
                    <% if @booking.qr_code.start_with?('<svg') %>
                      <%= @booking.qr_code.html_safe %>
                    <% else %>
                      <%= image_tag @booking.qr_code, alt: t('.qr.alt'), class: "w-64 h-64 mx-auto" %>
                    <% end %>
                  </div>
                  <div class="space-y-2">
                    <p class="text-sm text-gray-600">
                      <strong><%= t('.qr.show_code') %></strong> <%= t('.qr.at_appointment') %>
                    </p>
                    <p class="text-xs text-gray-500">
                      <%= t('.qr.screenshot') %>
                    </p>
                  </div>
                <% else %>
                  <div class="text-gray-500 py-8">
                    <svg class="w-16 h-16 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z"/>
                    </svg>
                    <p><%= t('.qr.not_available') %></p>
                  </div>
                <% end %>
              </div>
            </div>

            <!-- Booking ID -->
            <div class="mt-4 bg-blue-50 rounded-lg p-4">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-xs text-blue-600 font-medium uppercase tracking-wide mb-1"><%= t('.booking_id') %></p>
                  <p class="text-lg font-bold text-blue-900">#<%= @booking.id %></p>
                </div>
                <svg class="w-10 h-10 text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-wrap gap-3 pt-8 mt-8 border-t border-gray-200">
        <%= link_to bookings_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg font-medium transition" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          <%= t('.back_to_all') %>
        <% end %>

        <% if @booking.pending? || @booking.confirmed? %>
          <%= link_to edit_booking_path(@booking), class: "inline-flex items-center gap-2 px-6 py-3 bg-yellow-500 hover:bg-yellow-600 text-white rounded-lg font-medium transition" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            <%= t('.edit_booking') %>
          <% end %>

          <%= button_to booking_path(@booking), method: :delete,
              data: { turbo_confirm: t('.cancel_confirm') },
              class: "inline-flex items-center gap-2 px-6 py-3 bg-red-600 hover:bg-red-700 text-white rounded-lg font-medium transition cursor-pointer" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
            <%= t('.cancel_booking') %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Help Section -->
  <div class="mt-8 bg-blue-50 rounded-xl p-6 border border-blue-100">
    <div class="flex gap-4">
      <svg class="w-6 h-6 text-blue-600 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <div>
        <h3 class="font-semibold text-gray-900 mb-2"><%= t('.help.title') %></h3>
        <ul class="text-sm text-gray-700 space-y-1">
          <li>• <%= t('.help.arrive_early') %></li>
          <li>• <%= t('.help.bring_qr') %></li>
          <li>• <%= t('.help.cancel_policy') %></li>
          <li>• <%= t('.help.contact_business', business: @booking.service.business.name) %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
