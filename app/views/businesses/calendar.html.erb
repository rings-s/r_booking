<% content_for :title, "Calendar - #{@business.name}" %>

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50/30 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center gap-3 mb-4">
        <%= link_to @business, class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 transition group" do %>
          <svg class="w-5 h-5 transform group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          <span class="text-sm font-medium">Back to Business</span>
        <% end %>
      </div>

      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-2">Booking Calendar</h1>
          <p class="text-gray-600"><%= @business.name %></p>
        </div>

        <!-- Business Status Badge -->
        <div class="flex-shrink-0">
          <% if @business.currently_open? %>
            <div class="inline-flex items-center gap-2 px-4 py-2 bg-green-50 border border-green-200 rounded-xl">
              <span class="relative flex h-3 w-3">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
              </span>
              <div class="text-left">
                <p class="text-sm font-semibold text-green-900">Open Now</p>
                <p class="text-xs text-green-700">Closes in <%= @business.time_until_status_change %></p>
              </div>
            </div>
          <% else %>
            <div class="inline-flex items-center gap-2 px-4 py-2 bg-red-50 border border-red-200 rounded-xl">
              <span class="relative flex h-3 w-3">
                <span class="relative inline-flex rounded-full h-3 w-3 bg-red-500"></span>
              </span>
              <div class="text-left">
                <p class="text-sm font-semibold text-red-900">Closed</p>
                <p class="text-xs text-red-700">Opens in <%= @business.time_until_status_change %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Date Navigation -->
    <div class="bg-white rounded-2xl border border-gray-200 shadow-sm mb-6 p-6">
      <div class="flex items-center justify-between">
        <%= link_to calendar_business_path(@business, date: @date - 1.day),
            class: "inline-flex items-center gap-2 px-4 py-2 border-2 border-gray-300 rounded-xl text-gray-700 font-medium hover:bg-gray-50 hover:border-gray-400 transition-all duration-200" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          <span>Previous Day</span>
        <% end %>

        <div class="text-center">
          <h2 class="text-2xl font-bold text-gray-900">
            <%= @date.strftime('%B %d, %Y') %>
          </h2>
          <p class="text-sm text-gray-500 mt-1"><%= @date.strftime('%A') %></p>
        </div>

        <%= link_to calendar_business_path(@business, date: @date + 1.day),
            class: "inline-flex items-center gap-2 px-4 py-2 border-2 border-gray-300 rounded-xl text-gray-700 font-medium hover:bg-gray-50 hover:border-gray-400 transition-all duration-200" do %>
          <span>Next Day</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>
      </div>

      <!-- Quick Jump to Today -->
      <% unless @date == Date.today %>
        <div class="mt-4 text-center">
          <%= link_to "Jump to Today", calendar_business_path(@business),
              class: "inline-flex items-center gap-2 text-sm font-medium text-blue-600 hover:text-blue-700 transition" %>
        </div>
      <% end %>
    </div>

    <!-- Business Hours Info -->
    <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-xl p-4 mb-6 border border-blue-100">
      <div class="flex items-center gap-3">
        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div>
          <p class="text-sm font-medium text-gray-900">Business Hours</p>
          <p class="text-sm text-gray-600">
            <%= @business.open_time.strftime('%I:%M %p') %> - <%= @business.close_time.strftime('%I:%M %p') %>
          </p>
        </div>
      </div>
    </div>

    <!-- Bookings List -->
    <div class="bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden">
      <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          Bookings for <%= @date.strftime('%B %d') %>
          <span class="ml-2 px-2 py-1 bg-blue-100 text-blue-700 text-sm font-medium rounded-lg">
            <%= @bookings.count %> <%= 'booking'.pluralize(@bookings.count) %>
          </span>
        </h3>
      </div>

      <div class="divide-y divide-gray-200">
        <% if @bookings.any? %>
          <% @bookings.each do |booking| %>
            <div class="p-6 hover:bg-gray-50 transition-colors">
              <div class="flex items-start gap-4">
                <!-- Time Badge -->
                <div class="flex-shrink-0">
                  <div class="px-4 py-2 bg-blue-100 rounded-xl text-center">
                    <p class="text-lg font-bold text-blue-900">
                      <%= booking.start_time.strftime('%I:%M') %>
                    </p>
                    <p class="text-xs text-blue-700">
                      <%= booking.start_time.strftime('%p') %>
                    </p>
                  </div>
                </div>

                <!-- Booking Details -->
                <div class="flex-1 min-w-0">
                  <div class="flex items-start justify-between gap-4">
                    <div class="flex-1">
                      <h4 class="text-lg font-semibold text-gray-900 mb-1">
                        <%= booking.service.name %>
                      </h4>
                      <div class="flex flex-wrap items-center gap-3 text-sm text-gray-600">
                        <div class="flex items-center gap-1">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                          </svg>
                          <span><%= booking.user.name || booking.user.email %></span>
                        </div>
                        <div class="flex items-center gap-1">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                          </svg>
                          <span><%= booking.service.formatted_duration %></span>
                        </div>
                        <div class="flex items-center gap-1">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                          </svg>
                          <span>$<%= booking.service.price %></span>
                        </div>
                      </div>
                    </div>

                    <!-- Status Badge -->
                    <div class="flex-shrink-0">
                      <% case booking.status %>
                      <% when 'pending' %>
                        <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-yellow-100 text-yellow-800 text-xs font-medium rounded-lg">
                          <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                          </svg>
                          Pending
                        </span>
                      <% when 'confirmed' %>
                        <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-blue-100 text-blue-800 text-xs font-medium rounded-lg">
                          <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                          </svg>
                          Confirmed
                        </span>
                      <% when 'completed' %>
                        <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-green-100 text-green-800 text-xs font-medium rounded-lg">
                          <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                          </svg>
                          Completed
                        </span>
                      <% when 'cancelled' %>
                        <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-red-100 text-red-800 text-xs font-medium rounded-lg">
                          <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                          </svg>
                          Cancelled
                        </span>
                      <% end %>
                    </div>
                  </div>

                  <!-- Actions -->
                  <div class="mt-4 flex items-center gap-3">
                    <%= link_to "View Details", booking,
                        class: "inline-flex items-center gap-1.5 text-sm font-medium text-blue-600 hover:text-blue-700 transition" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                      </svg>
                      <span>View</span>
                    <% end %>

                    <% if booking.pending? || booking.confirmed? %>
                      <%= link_to edit_booking_path(booking),
                          class: "inline-flex items-center gap-1.5 text-sm font-medium text-gray-600 hover:text-gray-900 transition" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                        <span>Edit</span>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <!-- Empty State -->
          <div class="px-6 py-12 text-center">
            <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">No bookings for this day</h3>
            <p class="text-gray-600">There are no bookings scheduled for <%= @date.strftime('%B %d, %Y') %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
