<div id="<%= dom_id business %>"
     data-business-filter-target="businessCard"
     data-business-name="<%= business.name.to_s %>"
     data-business-description="<%= business.description.to_s %>"
     data-business-category="<%= business.category_id.to_s %>"
     class="group bg-white rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden border border-gray-100">
  <!-- Card Content -->
  <%= link_to business, class: "block" do %>
    <!-- Business Header with Logo/Image or Gradient -->
    <% if business.logo.attached? %>
      <div class="h-32 relative overflow-hidden bg-gray-100">
        <%= image_tag business.logo.variant(resize_to_fill: [400, 200]), class: "w-full h-full object-cover" %>
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 p-4">
          <h3 class="text-xl font-bold text-white truncate drop-shadow-lg"><%= business.name %></h3>
        </div>
      </div>
    <% elsif business.images.attached? && business.images.first %>
      <div class="h-32 relative overflow-hidden bg-gray-100">
        <%= image_tag business.images.first.variant(resize_to_fill: [400, 200]), class: "w-full h-full object-cover" %>
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 p-4">
          <h3 class="text-xl font-bold text-white truncate drop-shadow-lg"><%= business.name %></h3>
        </div>
      </div>
    <% else %>
      <div class="h-32 bg-gradient-to-br from-blue-500 via-indigo-500 to-purple-600 relative overflow-hidden">
        <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
        <div class="absolute bottom-0 left-0 right-0 p-4">
          <h3 class="text-xl font-bold text-white truncate drop-shadow-lg"><%= business.name %></h3>
        </div>
      </div>
    <% end %>

    <!-- Card Body -->
    <div class="p-6">
      <!-- Description -->
      <% if business.description.present? %>
        <p class="text-gray-600 text-sm line-clamp-2 mb-4"><%= business.description %></p>
      <% else %>
        <p class="text-gray-400 text-sm italic mb-4">No description available</p>
      <% end %>

      <!-- Business Details -->
      <div class="space-y-3 mb-4">
        <!-- Location -->
        <% if business.location.present? %>
          <div class="flex items-center gap-2 text-sm text-gray-600">
            <svg class="w-4 h-4 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span class="truncate"><%= business.location %></span>
          </div>
        <% end %>

        <!-- Operating Hours -->
        <% if business.open_time.present? && business.close_time.present? %>
          <div class="flex items-center gap-2 text-sm text-gray-600">
            <svg class="w-4 h-4 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span><%= business.open_time.strftime("%I:%M %p") %> - <%= business.close_time.strftime("%I:%M %p") %></span>
          </div>
        <% end %>

        <!-- Owner Info -->
        <div class="flex items-center gap-2 text-sm text-gray-600">
          <svg class="w-4 h-4 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          <span class="truncate">
            <% if business.user.name.present? %>
              <%= business.user.name %>
            <% else %>
              <%= business.user.email.split('@').first %>
            <% end %>
          </span>
        </div>
      </div>

      <!-- View Details Button -->
      <div class="pt-4 border-t border-gray-100">
        <span class="inline-flex items-center gap-2 text-blue-600 font-medium text-sm group-hover:text-blue-700 transition">
          View Details
          <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </span>
      </div>
    </div>
  <% end %>

  <!-- Card Actions (Only for owners/admins) -->
  <% if user_signed_in? && (current_user == business.user || current_user.admin?) %>
    <div class="px-6 pb-6 flex gap-2">
      <%= link_to edit_business_path(business), class: "flex-1 inline-flex items-center justify-center gap-2 px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg text-sm font-medium transition" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Edit
      <% end %>
      <%= button_to business, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this business?" }, class: "flex-1 inline-flex items-center justify-center gap-2 px-4 py-2 bg-red-50 hover:bg-red-100 text-red-600 rounded-lg text-sm font-medium transition cursor-pointer" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
        Delete
      <% end %>
    </div>
  <% end %>
</div>
