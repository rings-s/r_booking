<% content_for :title, "Subscription Details" %>

<div class="min-h-screen bg-white py-12">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <%= link_to subscriptions_path, class: "inline-flex items-center gap-2 text-gray-500 hover:text-gray-900 transition-colors mb-4" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to Subscriptions
      <% end %>
      <h1 class="text-4xl font-bold text-gray-900">Subscription Details</h1>
    </div>

    <!-- Subscription Card -->
    <div class="bg-white rounded-2xl border-2 border-gray-200 shadow-lg overflow-hidden">
      <!-- Status Banner -->
      <div class="<%= @subscription.valid_subscription? ? 'bg-gradient-to-br from-green-600 to-emerald-700' : 'bg-gradient-to-br from-red-600 to-rose-700' %> px-8 py-6 text-white">
        <div class="flex items-center justify-between">
          <div>
            <div class="flex items-center gap-3 mb-2">
              <span class="inline-flex items-center px-3 py-1 rounded-lg text-sm font-bold bg-white/20 backdrop-blur-sm">
                <%= @subscription.status.titleize %>
              </span>
              <% if @subscription.in_trial? %>
                <span class="inline-flex items-center px-3 py-1 rounded-lg text-sm font-bold bg-yellow-400/30 backdrop-blur-sm">
                  Trial Period
                </span>
              <% end %>
            </div>
            <h2 class="text-2xl font-bold">
              <%= @subscription.valid_subscription? ? 'Active Subscription' : 'Subscription Inactive' %>
            </h2>
            <p class="text-white/80 mt-1">
              <%= current_user.subscription_status_message %>
            </p>
          </div>
          <div class="text-right">
            <div class="text-4xl font-bold"><%= number_to_currency(@subscription.amount, unit: 'SAR ') %></div>
            <div class="text-white/80 text-sm mt-1">per month</div>
          </div>
        </div>
      </div>

      <!-- Subscription Details -->
      <div class="px-8 py-6 space-y-6">
        <!-- Period Information -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-500 mb-1">Current Period Start</label>
              <div class="text-lg font-semibold text-gray-900">
                <%= @subscription.current_period_start&.strftime('%B %d, %Y') || 'N/A' %>
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-500 mb-1">Current Period End</label>
              <div class="text-lg font-semibold text-gray-900">
                <%= @subscription.current_period_end&.strftime('%B %d, %Y') || 'N/A' %>
              </div>
            </div>

            <% if @subscription.trial_ends_at %>
              <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Trial Ends At</label>
                <div class="text-lg font-semibold text-gray-900">
                  <%= @subscription.trial_ends_at.strftime('%B %d, %Y') %>
                </div>
              </div>
            <% end %>
          </div>

          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-500 mb-1">Days Remaining</label>
              <div class="text-3xl font-bold text-blue-600">
                <%= @subscription.days_remaining %> days
              </div>
            </div>

            <% if @subscription.moyasar_payment_id %>
              <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Payment ID</label>
                <div class="text-sm font-mono text-gray-900 bg-gray-100 px-3 py-2 rounded-lg">
                  <%= @subscription.moyasar_payment_id %>
                </div>
              </div>
            <% end %>

            <div>
              <label class="block text-sm font-medium text-gray-500 mb-1">Subscription Created</label>
              <div class="text-lg font-semibold text-gray-900">
                <%= @subscription.created_at.strftime('%B %d, %Y') %>
              </div>
            </div>
          </div>
        </div>

        <!-- Progress Bar -->
        <% if @subscription.valid_subscription? %>
          <div class="pt-4">
            <div class="flex items-center justify-between mb-2">
              <label class="block text-sm font-medium text-gray-700">Subscription Period Progress</label>
              <span class="text-sm font-semibold text-gray-900">
                <%= ((Time.current - @subscription.current_period_start) / (@subscription.current_period_end - @subscription.current_period_start) * 100).to_i %>%
              </span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-3">
              <div class="bg-gradient-to-r from-blue-600 to-indigo-600 h-3 rounded-full transition-all duration-500"
                   style="width: <%= ((Time.current - @subscription.current_period_start) / (@subscription.current_period_end - @subscription.current_period_start) * 100).to_i %>%">
              </div>
            </div>
          </div>
        <% end %>

        <!-- Warning if expiring soon -->
        <% if current_user.subscription_expiring_soon? %>
          <div class="flex items-start gap-3 p-4 bg-yellow-50 border-2 border-yellow-200 rounded-xl">
            <svg class="w-6 h-6 text-yellow-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
            <div>
              <p class="font-semibold text-yellow-900">Subscription Expiring Soon</p>
              <p class="text-sm text-yellow-700 mt-1">
                Your subscription will expire in <%= @subscription.days_remaining %> days. Renew now to avoid interruption.
              </p>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Actions -->
      <div class="px-8 py-6 bg-gray-50 border-t border-gray-200">
        <div class="flex flex-col sm:flex-row gap-4 justify-between">
          <% if @subscription.valid_subscription? && !@subscription.cancelled? %>
            <%= button_to cancel_subscription_path(@subscription),
                method: :delete,
                data: { turbo_confirm: "Are you sure you want to cancel your subscription? You will lose access at the end of the current period." },
                class: "inline-flex items-center justify-center gap-2 px-6 py-3 bg-red-100 hover:bg-red-200 border-2 border-red-200 hover:border-red-300 text-red-700 rounded-xl font-semibold transition-all" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
              Cancel Subscription
            <% end %>
          <% elsif @subscription.ended? %>
            <%= link_to new_subscription_path, class: "inline-flex items-center justify-center gap-2 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-xl font-semibold shadow-md hover:shadow-lg transition-all" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
              </svg>
              Renew Subscription
            <% end %>
          <% end %>

          <%= link_to dashboard_path, class: "inline-flex items-center justify-center gap-2 px-6 py-3 bg-white hover:bg-gray-50 border-2 border-gray-300 hover:border-gray-400 text-gray-700 rounded-xl font-semibold transition-all" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
            Go to Dashboard
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
