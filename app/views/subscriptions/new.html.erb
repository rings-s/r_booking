<% content_for :title, t('subscriptions.subscribe') %>

<!-- Include Moyasar Payment Form -->

<div class="min-h-screen  py-12">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">

    <!-- Subscription Required Alert (if coming from business creation) -->
    <% if flash[:alert].present? %>
      <div class="mb-8 border-<%= I18n.locale == :ar ? 'r' : 'l' %>-4 border-blue-500 rounded-lg p-6 shadow-sm">
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="text-lg font-bold text-blue-900 mb-2">
              <%= t('subscriptions.subscription_needed_title') %>
            </h3>
            <p class="text-blue-800 mb-4">
              <%= flash[:alert] %>
            </p>
            <p class="text-sm text-blue-700">
              <%= t('subscriptions.subscription_needed_message') %>
            </p>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Header -->
    <div class="text-center mb-12">
      <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-blue-600 to-indigo-700 rounded-3xl mb-6 shadow-xl shadow-blue-500/30">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4 tracking-tight">
        Subscribe to R_Booking
      </h1>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Unlock the full potential of your business with our monthly subscription
      </p>
    </div>

    <!-- Free Trial Option (if eligible) -->
    <% if @trial_eligible %>
      <div class="bg-gradient-to-br from-green-50 to-emerald-100 rounded-3xl shadow-2xl overflow-hidden mb-8 border-2 border-green-200">
        <div class="px-8 py-8">
          <div class="flex items-start gap-4 mb-6">
            <div class="flex-shrink-0">
              <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-green-600 to-emerald-700 rounded-2xl shadow-lg">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/>
                </svg>
              </div>
            </div>
            <div class="flex-1">
              <h2 class="text-2xl font-bold text-gray-900 mb-2">
                <%= t('subscriptions.trial_option_title') %>
              </h2>
              <p class="text-gray-700 text-lg">
                <%= t('subscriptions.trial_option_description') %>
              </p>
            </div>
          </div>

          <!-- Trial Features -->
          <div class="bg-white rounded-2xl p-6 mb-6">
            <ul class="space-y-3">
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700 font-medium">2 weeks free access to all features</span>
              </li>
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700 font-medium">No credit card required</span>
              </li>
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700 font-medium">Cancel anytime during trial</span>
              </li>
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700 font-medium">Full access to business dashboard and analytics</span>
              </li>
            </ul>
          </div>

          <!-- Start Trial Button -->
          <%= form_with url: start_trial_subscriptions_path, method: :post, local: true do |f| %>
            <%= f.submit t('subscriptions.start_free_trial'),
                class: "w-full bg-gradient-to-r from-green-600 to-emerald-700 text-white text-lg font-bold py-4 px-6 rounded-2xl hover:from-green-700 hover:to-emerald-800 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105 cursor-pointer" %>
          <% end %>
        </div>
      </div>

      <!-- Separator -->
      <div class="flex items-center gap-4 mb-8">
        <div class="flex-1 h-px bg-gray-300"></div>
        <span class="text-gray-500 font-medium text-lg px-4">
          <%= t('subscriptions.or_pay_now') %>
        </span>
        <div class="flex-1 h-px bg-gray-300"></div>
      </div>
    <% end %>

    <!-- Moyasar Configuration Warning (Development Only) -->
    <% if Rails.env.development? && Moyasar.publishable_key.start_with?("pk_test_PLEASE_CONFIGURE") %>
      <div class="mb-8 bg-amber-50 border-<%= I18n.locale == :ar ? 'r' : 'l' %>-4 border-amber-500 rounded-lg p-6 shadow-sm">
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0">
            <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="text-lg font-bold text-amber-900 mb-2">
              Moyasar API Keys Not Configured
            </h3>
            <p class="text-amber-800 mb-3">
              The Moyasar payment gateway keys are not configured. The payment form below will display but won't process actual payments.
            </p>
            <p class="text-sm text-amber-700 mb-2">
              <strong>To configure Moyasar:</strong>
            </p>
            <ol class="text-sm text-amber-700 list-decimal list-inside space-y-1 mb-3">
              <li>Sign up at <a href="https://dashboard.moyasar.com/" target="_blank" class="underline font-medium hover:text-amber-900">Moyasar Dashboard</a></li>
              <li>Get your API keys from Settings â†’ API Keys</li>
              <li>Run: <code class="bg-amber-200 px-1 rounded font-mono text-xs">EDITOR=nano bin/rails credentials:edit</code></li>
              <li>Add your keys to the credentials file</li>
              <li>Restart your Rails server</li>
            </ol>
            <p class="text-xs text-amber-600">
              See <code class="bg-amber-200 px-1 rounded font-mono">MOYASAR_SETUP.md</code> for detailed instructions.
            </p>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Pricing Card -->
    <div class="bg-white rounded-3xl shadow-2xl overflow-hidden mb-8">
      <!-- Plan Header -->
      <div class="bg-gradient-to-br from-blue-600 to-indigo-700 px-8 py-8 text-white">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-2xl font-bold mb-2">Monthly Subscription</h2>
            <p class="text-blue-100">Full access to all features</p>
          </div>
          <div class="text-right">
            <div class="text-5xl font-bold">99</div>
            <div class="text-blue-100 text-sm">SAR / month</div>
          </div>
        </div>
      </div>

      <!-- Features List -->
      <div class="px-8 py-8 bg-gray-50">
        <h3 class="text-lg font-bold text-gray-900 mb-4">What's included:</h3>
        <ul class="space-y-3">
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span class="text-gray-700">Create unlimited businesses</span>
          </li>
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span class="text-gray-700">Add unlimited services per business</span>
          </li>
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span class="text-gray-700">Accept unlimited bookings</span>
          </li>
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span class="text-gray-700">Business calendar and scheduling</span>
          </li>
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span class="text-gray-700">QR code generation for bookings</span>
          </li>
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span class="text-gray-700">Analytics and insights dashboard</span>
          </li>
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span class="text-gray-700">Priority customer support</span>
          </li>
        </ul>
      </div>

      <!-- Payment Form -->
      <div class="px-8 py-8 bg-white border-t border-gray-200"
           data-controller="moyasar"
           data-moyasar-amount-value="<%= Moyasar.to_halalas(Moyasar.monthly_subscription_amount) %>"
           data-moyasar-currency-value="SAR"
           data-moyasar-description-value="Monthly Subscription - R_Booking"
           data-moyasar-publishable-key-value="<%= Moyasar.publishable_key %>"
           data-moyasar-callback-url-value="<%= callback_subscriptions_url %>"
           data-moyasar-metadata-value="<%= { user_id: current_user.id, subscription_type: 'monthly' }.to_json %>">
        <h3 class="text-lg font-bold text-gray-900 mb-6">Payment Details</h3>

        <!-- Error Message Container -->
        <div class="payment-error-message hidden mb-6 p-4 bg-red-50 border border-red-200 rounded-xl text-red-700"></div>

        <!-- Moyasar Payment Form Container -->
        <div class="mysr-form mb-6"></div>

        <!-- Security Notice -->
        <div class="flex items-start gap-3 p-4 bg-blue-50 rounded-xl border border-blue-200">
          <svg class="w-5 h-5 text-blue-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <div>
            <p class="text-sm font-semibold text-blue-900">Secure Payment</p>
            <p class="text-sm text-blue-700 mt-1">Your payment information is encrypted and secure. We use Moyasar, a trusted payment gateway.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Back Link -->
    <div class="text-center">
      <%= link_to dashboard_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 font-medium transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to Dashboard
      <% end %>
    </div>
  </div>
</div>
