<% content_for :title, t('dashboard.title') %>

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50/30 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-2">
            <%= t('dashboard.welcome') %>, <%= @user.name || @user.email.split('@').first %>!
          </h1>
          <p class="text-gray-600"><%= t('dashboard.overview') %></p>
        </div>
        <div class="hidden sm:block">
          <div class="px-4 py-2 bg-blue-100 border border-blue-200 rounded-xl">
            <p class="text-sm font-medium text-blue-900"><%= t('dashboard.client_title') %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Total Bookings -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-blue-100 rounded-xl">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-1"><%= @bookings.count %></h3>
        <p class="text-sm text-gray-600"><%= t('dashboard.total_bookings') %></p>
      </div>

      <!-- Upcoming Bookings -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-green-100 rounded-xl">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-1"><%= @upcoming_bookings.count %></h3>
        <p class="text-sm text-gray-600"><%= t('dashboard.upcoming') %></p>
      </div>

      <!-- Pending Bookings -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-yellow-100 rounded-xl">
            <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-1"><%= @bookings_by_status['pending'] || 0 %></h3>
        <p class="text-sm text-gray-600"><%= t('dashboard.pending') %></p>
      </div>

      <!-- Completed Bookings -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-purple-100 rounded-xl">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-1"><%= @bookings_by_status['completed'] || 0 %></h3>
        <p class="text-sm text-gray-600"><%= t('dashboard.completed') %></p>
      </div>
    </div>

    <!-- Charts Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8" data-controller="chartkick">
      <!-- Bookings Over Time -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
          <%= t('dashboard.booking_trends') %>
        </h3>
        <%= line_chart @bookings_by_month,
            colors: ["#3b82f6"],
            library: {
              backgroundColor: 'rgba(59, 130, 246, 0.1)',
              borderColor: '#3b82f6',
              borderWidth: 3,
              fill: true,
              tension: 0.4,
              pointRadius: 4,
              pointHoverRadius: 6
            } %>
      </div>

      <!-- Bookings by Status -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z"/>
          </svg>
          <%= t('dashboard.bookings_by_status') %>
        </h3>
        <%= pie_chart @bookings_by_status,
            donut: true,
            colors: ["#fbbf24", "#3b82f6", "#10b981", "#ef4444"],
            library: {
              cutout: '70%'
            } %>
      </div>
    </div>

    <!-- Upcoming Bookings -->
    <div class="bg-white rounded-2xl border border-gray-200 shadow-sm mb-8">
      <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
          </svg>
          <%= t('dashboard.upcoming_bookings') %>
        </h3>
      </div>

      <div class="divide-y divide-gray-200">
        <% if @upcoming_bookings.any? %>
          <% @upcoming_bookings.each do |booking| %>
            <div class="p-6 hover:bg-gray-50 transition-colors">
              <div class="flex items-start gap-4">
                <!-- Time Badge -->
                <div class="flex-shrink-0">
                  <div class="px-4 py-2 bg-blue-100 rounded-xl text-center">
                    <p class="text-sm font-bold text-blue-900">
                      <%= booking.start_time.strftime('%b') %>
                    </p>
                    <p class="text-2xl font-bold text-blue-900">
                      <%= booking.start_time.strftime('%d') %>
                    </p>
                    <p class="text-xs text-blue-700">
                      <%= booking.start_time.strftime('%I:%M %p') %>
                    </p>
                  </div>
                </div>

                <!-- Booking Details -->
                <div class="flex-1 min-w-0">
                  <h4 class="text-lg font-semibold text-gray-900 mb-1">
                    <%= booking.service.name %>
                  </h4>
                  <p class="text-sm text-gray-600 mb-2">
                    <%= booking.service.business.name %>
                  </p>
                  <div class="flex flex-wrap items-center gap-3 text-sm text-gray-600">
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      <span><%= booking.service.formatted_duration %></span>
                    </div>
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      <span>$<%= booking.service.price %></span>
                    </div>
                  </div>
                </div>

                <!-- Status & Actions -->
                <div class="flex-shrink-0 flex flex-col items-end gap-3">
                  <% case booking.status %>
                  <% when 'pending' %>
                    <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-yellow-100 text-yellow-800 text-xs font-medium rounded-lg">
                      <%= t('dashboard.pending') %>
                    </span>
                  <% when 'confirmed' %>
                    <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-blue-100 text-blue-800 text-xs font-medium rounded-lg">
                      <%= t('dashboard.confirmed') %>
                    </span>
                  <% end %>
                  <%= link_to t('dashboard.view_details'), booking,
                      class: "text-sm font-medium text-blue-600 hover:text-blue-700 transition" %>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="px-6 py-12 text-center">
            <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= t('dashboard.no_upcoming') %></h3>
            <p class="text-gray-600 mb-6"><%= t('dashboard.no_appointments') %></p>
            <%= link_to t('dashboard.browse_services'), businesses_path,
                class: "inline-flex items-center gap-2 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium shadow-sm hover:shadow-md transition" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Recent Bookings -->
    <div class="bg-white rounded-2xl border border-gray-200 shadow-sm">
      <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= t('dashboard.recent_bookings') %>
        </h3>
      </div>

      <div class="divide-y divide-gray-200">
        <% if @past_bookings.any? %>
          <% @past_bookings.each do |booking| %>
            <div class="p-6 hover:bg-gray-50 transition-colors">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <h4 class="text-lg font-semibold text-gray-900 mb-1">
                    <%= booking.service.name %>
                  </h4>
                  <p class="text-sm text-gray-600 mb-2">
                    <%= booking.service.business.name %>
                  </p>
                  <p class="text-sm text-gray-500">
                    <%= booking.start_time.strftime('%B %d, %Y at %I:%M %p') %>
                  </p>
                </div>
                <div class="flex items-center gap-3">
                  <% case booking.status %>
                  <% when 'completed' %>
                    <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-green-100 text-green-800 text-xs font-medium rounded-lg">
                      <%= t('dashboard.completed') %>
                    </span>
                  <% when 'cancelled' %>
                    <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-red-100 text-red-800 text-xs font-medium rounded-lg">
                      <%= t('dashboard.cancelled') %>
                    </span>
                  <% end %>
                  <%= link_to t('common.view'), booking,
                      class: "text-sm font-medium text-blue-600 hover:text-blue-700 transition" %>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="px-6 py-12 text-center">
            <p class="text-gray-600"><%= t('dashboard.no_recent') %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
