<% content_for :title, t('dashboard.business_dashboard') %>

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-purple-50/30 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-2">
            <%= t('dashboard.business_dashboard') %>
          </h1>
          <p class="text-gray-600"><%= t('dashboard.analytics') %></p>
        </div>
        <div class="hidden sm:block">
          <div class="px-4 py-2 bg-purple-100 border border-purple-200 rounded-xl">
            <p class="text-sm font-medium text-purple-900"><%= t('dashboard.owner_title') %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Revenue Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Total Revenue -->
      <div class="bg-gradient-to-br from-green-500 to-emerald-600 rounded-2xl p-6 text-white shadow-lg">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-white/20 rounded-xl">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
        <h3 class="text-2xl font-bold mb-1">$<%= number_with_delimiter(@total_revenue) %></h3>
        <p class="text-sm text-white/80"><%= t('dashboard.total_revenue') %></p>
      </div>

      <!-- Monthly Revenue -->
      <div class="bg-gradient-to-br from-blue-500 to-indigo-600 rounded-2xl p-6 text-white shadow-lg">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-white/20 rounded-xl">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
            </svg>
          </div>
        </div>
        <h3 class="text-2xl font-bold mb-1">$<%= number_with_delimiter(@monthly_revenue) %></h3>
        <p class="text-sm text-white/80"><%= t('dashboard.monthly_revenue') %></p>
      </div>

      <!-- Total Bookings -->
      <div class="bg-gradient-to-br from-purple-500 to-pink-600 rounded-2xl p-6 text-white shadow-lg">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-white/20 rounded-xl">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
        </div>
        <h3 class="text-2xl font-bold mb-1"><%= @total_bookings %></h3>
        <p class="text-sm text-white/80"><%= t('dashboard.total_bookings') %></p>
      </div>

      <!-- Pending Bookings -->
      <div class="bg-gradient-to-br from-orange-500 to-red-600 rounded-2xl p-6 text-white shadow-lg">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-white/20 rounded-xl">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
        <h3 class="text-2xl font-bold mb-1"><%= @pending_bookings %></h3>
        <p class="text-sm text-white/80"><%= t('dashboard.pending') %></p>
      </div>
    </div>

    <!-- Additional Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
        <div class="flex items-center gap-4">
          <div class="p-3 bg-blue-100 rounded-xl">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div>
            <h3 class="text-2xl font-bold text-gray-900"><%= @confirmed_bookings %></h3>
            <p class="text-sm text-gray-600"><%= t('dashboard.confirmed') %></p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
        <div class="flex items-center gap-4">
          <div class="p-3 bg-green-100 rounded-xl">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          </div>
          <div>
            <h3 class="text-2xl font-bold text-gray-900"><%= @completed_bookings %></h3>
            <p class="text-sm text-gray-600"><%= t('dashboard.completed') %></p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
        <div class="flex items-center gap-4">
          <div class="p-3 bg-purple-100 rounded-xl">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div>
            <h3 class="text-2xl font-bold text-gray-900"><%= @todays_bookings.count %></h3>
            <p class="text-sm text-gray-600"><%= t('dashboard.today') %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Charts Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8" data-controller="chartkick">
      <!-- Revenue Chart -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= t('dashboard.revenue_trend_12') %>
        </h3>
        <%= area_chart @revenue_by_month,
            prefix: "$",
            thousands: ",",
            colors: ["#10b981"],
            library: {
              backgroundColor: 'rgba(16, 185, 129, 0.1)',
              borderColor: '#10b981',
              borderWidth: 3,
              fill: true,
              tension: 0.4,
              pointRadius: 4,
              pointHoverRadius: 6
            } %>
      </div>

      <!-- Bookings by Day -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
          <%= t('dashboard.daily_bookings_30') %>
        </h3>
        <%= column_chart @bookings_by_day,
            colors: ["#3b82f6"],
            library: {
              backgroundColor: '#3b82f6',
              borderRadius: 8
            } %>
      </div>

      <!-- Bookings by Status -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"/>
          </svg>
          <%= t('dashboard.bookings_by_status') %>
        </h3>
        <%= pie_chart @bookings_by_status,
            donut: true,
            colors: ["#fbbf24", "#3b82f6", "#10b981", "#ef4444"],
            library: {
              cutout: '65%'
            } %>
      </div>

      <!-- Top Services -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
          </svg>
          <%= t('dashboard.top_services') %>
        </h3>
        <%= bar_chart @top_services,
            colors: ["#6366f1"],
            library: {
              backgroundColor: '#6366f1',
              borderRadius: 6
            } %>
      </div>

      <!-- Revenue by Service -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm lg:col-span-2">
        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= t('dashboard.revenue_by_service') %>
        </h3>
        <%= column_chart @revenue_by_service,
            prefix: "$",
            thousands: ",",
            colors: ["#10b981"],
            library: {
              backgroundColor: '#10b981',
              borderRadius: 8
            } %>
      </div>
    </div>

    <!-- Today's Bookings -->
    <% if @todays_bookings.any? %>
      <div class="bg-white rounded-2xl border border-gray-200 shadow-sm mb-8">
        <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
          <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <%= t('dashboard.todays_bookings') %> (<%= @todays_bookings.count %>)
          </h3>
        </div>

        <div class="divide-y divide-gray-200">
          <% @todays_bookings.each do |booking| %>
            <div class="p-6 hover:bg-gray-50 transition-colors">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0">
                  <div class="px-4 py-2 bg-blue-100 rounded-xl text-center">
                    <p class="text-lg font-bold text-blue-900">
                      <%= booking.start_time.strftime('%I:%M') %>
                    </p>
                    <p class="text-xs text-blue-700">
                      <%= booking.start_time.strftime('%p') %>
                    </p>
                  </div>
                </div>

                <div class="flex-1">
                  <h4 class="text-lg font-semibold text-gray-900 mb-1">
                    <%= booking.service.name %>
                  </h4>
                  <div class="flex flex-wrap items-center gap-3 text-sm text-gray-600">
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                      </svg>
                      <span><%= booking.user.name || booking.user.email %></span>
                    </div>
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                      </svg>
                      <span><%= booking.service.business.name %></span>
                    </div>
                  </div>
                </div>

                <div class="flex-shrink-0 flex items-center gap-3">
                  <% case booking.status %>
                  <% when 'pending' %>
                    <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-yellow-100 text-yellow-800 text-xs font-medium rounded-lg">
                      <%= t('dashboard.pending') %>
                    </span>
                  <% when 'confirmed' %>
                    <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-blue-100 text-blue-800 text-xs font-medium rounded-lg">
                      <%= t('dashboard.confirmed') %>
                    </span>
                  <% when 'completed' %>
                    <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-green-100 text-green-800 text-xs font-medium rounded-lg">
                      <%= t('dashboard.completed') %>
                    </span>
                  <% end %>
                  <%= link_to t('common.view'), booking,
                      class: "text-sm font-medium text-blue-600 hover:text-blue-700 transition" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Upcoming Bookings -->
    <div class="bg-white rounded-2xl border border-gray-200 shadow-sm">
      <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
          </svg>
          <%= t('dashboard.upcoming_bookings_7') %>
        </h3>
      </div>

      <div class="divide-y divide-gray-200">
        <% if @upcoming_bookings.any? %>
          <% @upcoming_bookings.each do |booking| %>
            <div class="p-6 hover:bg-gray-50 transition-colors">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0">
                  <div class="px-4 py-2 bg-purple-100 rounded-xl text-center">
                    <p class="text-sm font-bold text-purple-900">
                      <%= booking.start_time.strftime('%b') %>
                    </p>
                    <p class="text-2xl font-bold text-purple-900">
                      <%= booking.start_time.strftime('%d') %>
                    </p>
                    <p class="text-xs text-purple-700">
                      <%= booking.start_time.strftime('%I:%M %p') %>
                    </p>
                  </div>
                </div>

                <div class="flex-1">
                  <h4 class="text-lg font-semibold text-gray-900 mb-1">
                    <%= booking.service.name %>
                  </h4>
                  <div class="flex flex-wrap items-center gap-3 text-sm text-gray-600">
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                      </svg>
                      <span><%= booking.user.name || booking.user.email %></span>
                    </div>
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                      </svg>
                      <span><%= booking.service.business.name %></span>
                    </div>
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      <span>$<%= booking.service.price %></span>
                    </div>
                  </div>
                </div>

                <div class="flex-shrink-0 flex items-center gap-3">
                  <% case booking.status %>
                  <% when 'pending' %>
                    <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-yellow-100 text-yellow-800 text-xs font-medium rounded-lg">
                      <%= t('dashboard.pending') %>
                    </span>
                  <% when 'confirmed' %>
                    <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-blue-100 text-blue-800 text-xs font-medium rounded-lg">
                      <%= t('dashboard.confirmed') %>
                    </span>
                  <% end %>
                  <%= link_to t('common.view'), booking,
                      class: "text-sm font-medium text-blue-600 hover:text-blue-700 transition" %>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="px-6 py-12 text-center">
            <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= t('dashboard.no_upcoming') %></h3>
            <p class="text-gray-600"><%= t('dashboard.no_bookings_7') %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
