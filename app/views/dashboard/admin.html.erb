<% content_for :title, t('dashboard.admin_title') %>

<div class="px-12 min-h-screen bg-gradient-to-br from-gray-50 to-indigo-50/30 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-2"><%= t('dashboard.admin_title') %></h1>
          <p class="text-gray-600"><%= t('dashboard.system_analytics') %></p>
        </div>
        <div class="hidden sm:block">
          <div class="px-4 py-2 bg-red-100 border border-red-200 rounded-xl">
            <p class="text-sm font-medium text-red-900"><%= t('dashboard.administrator') %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- System Stats -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="bg-gradient-to-br from-blue-500 to-cyan-600 rounded-2xl p-6 text-white shadow-lg">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-white/20 rounded-xl">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
            </svg>
          </div>
        </div>
        <h3 class="text-2xl font-bold mb-1"><%= @total_users %></h3>
        <p class="text-sm text-white/80"><%= t('dashboard.total_users') %></p>
      </div>

      <div class="bg-gradient-to-br from-purple-500 to-pink-600 rounded-2xl p-6 text-white shadow-lg">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-white/20 rounded-xl">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
          </div>
        </div>
        <h3 class="text-2xl font-bold mb-1"><%= @total_businesses %></h3>
        <p class="text-sm text-white/80"><%= t('dashboard.businesses') %></p>
      </div>

      <div class="bg-gradient-to-br from-emerald-500 to-green-600 rounded-2xl p-6 text-white shadow-lg">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-white/20 rounded-xl">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
        <h3 class="text-2xl font-bold mb-1">$<%= number_with_delimiter(@total_revenue) %></h3>
        <p class="text-sm text-white/80"><%= t('dashboard.total_revenue') %></p>
      </div>

      <div class="bg-gradient-to-br from-orange-500 to-red-600 rounded-2xl p-6 text-white shadow-lg">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-white/20 rounded-xl">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
        </div>
        <h3 class="text-2xl font-bold mb-1"><%= @total_bookings %></h3>
        <p class="text-sm text-white/80"><%= t('dashboard.total_bookings') %></p>
      </div>
    </div>

    <!-- Additional Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
        <div class="flex items-center gap-4">
          <div class="p-3 bg-blue-100 rounded-xl">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </div>
          <div>
            <h3 class="text-2xl font-bold text-gray-900"><%= @total_clients %></h3>
            <p class="text-sm text-gray-600"><%= t('dashboard.clients') %></p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
        <div class="flex items-center gap-4">
          <div class="p-3 bg-purple-100 rounded-xl ">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <div>
            <h3 class="text-2xl font-bold text-gray-900"><%= @total_owners %></h3>
            <p class="text-sm text-gray-600"><%= t('dashboard.owners') %></p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
        <div class="flex items-center gap-4">
          <div class="p-3 bg-green-100 rounded-xl">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
            </svg>
          </div>
          <div>
            <h3 class="text-2xl font-bold text-gray-900"><%= @total_services %></h3>
            <p class="text-sm text-gray-600"><%= t('dashboard.services') %></p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
        <div class="flex items-center gap-4">
          <div class="p-3 bg-yellow-100 rounded-xl">
            <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
            </svg>
          </div>
          <div>
            <h3 class="text-2xl font-bold text-gray-900"><%= @total_categories %></h3>
            <p class="text-sm text-gray-600"><%= t('categories.title') %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Charts Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8" data-controller="chartkick">
      <!-- Users Growth -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
          </svg>
          <%= t('dashboard.user_growth_12') %>
        </h3>
        <%= area_chart @users_by_month,
            colors: ["#3b82f6"],
            library: {
              backgroundColor: 'rgba(59, 130, 246, 0.1)',
              borderColor: '#3b82f6',
              borderWidth: 3,
              fill: true,
              tension: 0.4
            } %>
      </div>

      <!-- Revenue Trend -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= t('dashboard.revenue_trend_12') %>
        </h3>
        <%= line_chart @revenue_by_month,
            prefix: "$",
            thousands: ",",
            colors: ["#10b981"],
            library: {
              borderColor: '#10b981',
              borderWidth: 3,
              tension: 0.4
            } %>
      </div>

      <!-- Business Growth -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
          <%= t('dashboard.business_growth_12') %>
        </h3>
        <%= column_chart @businesses_by_month,
            colors: ["#8b5cf6"],
            library: {
              backgroundColor: '#8b5cf6',
              borderRadius: 8
            } %>
      </div>

      <!-- Bookings Trend -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          <%= t('dashboard.booking_trend_12') %>
        </h3>
        <%= area_chart @bookings_by_month,
            colors: ["#f97316"],
            library: {
              backgroundColor: 'rgba(249, 115, 22, 0.1)',
              borderColor: '#f97316',
              borderWidth: 3,
              fill: true,
              tension: 0.4
            } %>
      </div>

      <!-- Users by Role -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"/>
          </svg>
          <%= t('dashboard.users_by_role') %>
        </h3>
        <%= pie_chart @users_by_role,
            donut: true,
            colors: ["#3b82f6", "#8b5cf6", "#ef4444"],
            library: {
              cutout: '65%'
            } %>
      </div>

      <!-- Bookings by Status -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
          <%= t('dashboard.bookings_by_status') %>
        </h3>
        <%= column_chart @bookings_by_status,
            colors: ["#fbbf24", "#3b82f6", "#10b981", "#ef4444"] %>
      </div>

      <!-- Top Businesses -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm lg:col-span-2">
        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
          </svg>
          <%= t('dashboard.top_businesses') %>
        </h3>
        <%= bar_chart @top_businesses,
            colors: ["#10b981"],
            library: {
              backgroundColor: '#10b981',
              borderRadius: 6
            } %>
      </div>

      <!-- Businesses by Category -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm lg:col-span-2">
        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
          </svg>
          <%= t('dashboard.businesses_by_category') %>
        </h3>
        <%= column_chart @businesses_by_category,
            colors: ["#06b6d4"],
            library: {
              backgroundColor: '#06b6d4',
              borderRadius: 8
            } %>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Recent Users -->
      <div class="bg-white rounded-2xl border border-gray-200 shadow-sm">
        <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
          <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
            </svg>
            <%= t('dashboard.recent_users') %>
          </h3>
        </div>

        <div class="divide-y divide-gray-200">
          <% @recent_users.each do |user| %>
            <div class="p-6 hover:bg-gray-50 transition-colors">
              <div class="flex items-center justify-between">
                <div>
                  <h4 class="text-sm font-semibold text-gray-900">
                    <%= user.name || user.email %>
                  </h4>
                  <p class="text-xs text-gray-500 mt-1">
                    <%= user.created_at.strftime('%B %d, %Y') %>
                  </p>
                </div>
                <span class="inline-flex items-center px-3 py-1 rounded-lg text-xs font-medium
                  <%= user.client? ? 'bg-blue-100 text-blue-800' :
                      user.owner? ? 'bg-purple-100 text-purple-800' :
                      'bg-red-100 text-red-800' %>">
                  <%= user.role.titleize %>
                </span>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Recent Businesses -->
      <div class="bg-white rounded-2xl border border-gray-200 shadow-sm">
        <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
          <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
            <%= t('dashboard.recent_businesses') %>
          </h3>
        </div>

        <div class="divide-y divide-gray-200">
          <% @recent_businesses.each do |business| %>
            <div class="p-6 hover:bg-gray-50 transition-colors">
              <div class="flex items-center justify-between">
                <div>
                  <h4 class="text-sm font-semibold text-gray-900">
                    <%= business.name %>
                  </h4>
                  <p class="text-xs text-gray-500 mt-1">
                    by <%= business.user.name || business.user.email %> â€¢ <%= business.created_at.strftime('%b %d, %Y') %>
                  </p>
                </div>
                <%= link_to t('common.view'), business, class: "text-sm font-medium text-blue-600 hover:text-blue-700" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
