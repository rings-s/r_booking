<%= form_with(model: queue_ticket, class: "contents") do |form| %>
  <% if queue_ticket.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(queue_ticket.errors.count, "error") %> prohibited this queue_ticket from being saved:</h2>

      <ul class="list-disc ml-6">
        <% queue_ticket.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :booking_id %>
    <%= form.text_field :booking_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": queue_ticket.errors[:booking_id].none?, "border-red-400 focus:outline-red-600": queue_ticket.errors[:booking_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :position %>
    <%= form.number_field :position, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": queue_ticket.errors[:position].none?, "border-red-400 focus:outline-red-600": queue_ticket.errors[:position].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.number_field :status, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": queue_ticket.errors[:status].none?, "border-red-400 focus:outline-red-600": queue_ticket.errors[:status].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :issued_at %>
    <%= form.datetime_field :issued_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": queue_ticket.errors[:issued_at].none?, "border-red-400 focus:outline-red-600": queue_ticket.errors[:issued_at].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
