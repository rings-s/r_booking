            <div class="flex-1 min-w-0">
              <h3 class="text-xl font-bold text-gray-900 mb-2"><%= t('home.features.secure.title') %></h3>
              <p class="text-gray-600 leading-relaxed"><%= t('home.features.secure.description') %></p>
            </div>
          </div>
