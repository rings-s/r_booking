      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-gradient-to-r from-indigo-200/20 to-purple-200/20 rounded-full blur-3xl opacity-60"></div>
    </div>
    
    <div class="<%= I18n.locale == :ar ? 'text-right' : 'text-left' %> max-w-4xl <%= I18n.locale == :ar ? 'mr-0 ml-auto' : 'ml-0 mr-auto' %> relative">
